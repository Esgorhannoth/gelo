
command tree {sz th} {
    if [>= $sz 1] then {
        rotate $th
        forward $sz
        set! half [div $sz 2]
        every item n in [List 75 30 -29 -76] do {
            tree $half [- $th $n]
        }
        backward $sz
        rotate [neg $th]
    }
}

