
set! right { rotate  90 }
set! left  { rotate -90 }

set! backward [o forward neg]

set! pos { List [get-x] [get-y] }

command jump-to {x y} {
    *set! oldpen theta -- [/ pen-up?] [- 90 [angle]]
    up
    reset
    forward $x
    if [+number? $y] then left else right
    forward $y
    rotate $theta
    if $oldpen then down
} 
